               <padding>
                  <Insets top="10.0" />
               </padding>
            </Pane>
            <ImageView fx:id="avatar_image" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets bottom="20.0" top="5.0" />
               </VBox.margin>
            </ImageView>
            <TextField fx:id="avatar_input" onInputMethodTextChanged="#avatar_change" promptText="avatar url">
