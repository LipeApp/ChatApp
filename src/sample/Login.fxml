            <TextField fx:id="user_name_input" layoutX="10.0" layoutY="273.0" promptText="Username">
               <VBox.margin>
                  <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </TextField>
            <JFXButton layoutX="50.0" layoutY="283.0" onMouseClicked="#login_click" prefWidth="220.0" style="-fx-background-color: #5EE4FC; -fx-background-radius: 10px;" text="Login" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </JFXButton>
         </children>
      </VBox>
   </children>
